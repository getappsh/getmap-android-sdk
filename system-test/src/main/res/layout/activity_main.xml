<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical"
        tools:context=".SystemTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Test"
            android:onClick="stopTest"
            android:layout_margin="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Test"
            android:onClick="startTest"
            android:layout_margin="16dp"/>



    </LinearLayout>


        <TextView
            android:id="@+id/savedTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Saved Time"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Test Discovery -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/testDiscoveryIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_loading"
                android:contentDescription="Test Discovery Icon"/>

            <TextView
                android:id="@+id/testDiscoveryName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Test Discovery"
                android:textSize="18sp"
                android:gravity="center_vertical|start"/>

        </LinearLayout>

        <!-- Test Config -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/testConfigIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_loading"
                android:contentDescription="Test Config Icon"/>

            <TextView
                android:id="@+id/testConfigName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Test Config"
                android:textSize="18sp"
                android:gravity="center_vertical|start"/>

        </LinearLayout>

        <!-- Test Import -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/testImportIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_loading"
                android:contentDescription="Test Import Icon"/>

            <TextView
                android:id="@+id/testImportName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Test Import"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <!-- Test Download -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/testDownloadIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_loading"
                android:contentDescription="Test Download Icon"/>

            <TextView
                android:id="@+id/testDownloadName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Test Download"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <!-- Test File Move -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/testFileMoveIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_loading"
                android:contentDescription="Test File Move Icon"/>

            <TextView
                android:id="@+id/testFileMoveName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Test File Move"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <!-- Test Inventory Updates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/testInventoryUpdatesIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_loading"
                android:contentDescription="Test Inventory Updates Icon"/>

            <TextView
                android:id="@+id/testInventoryUpdatesName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Test Inventory Updates"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>