<!-- res/layout/list_item_download.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />
    <!-- Display the file name, status, and error content -->
    <TextView
        android:id="@+id/textFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="File Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Status"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/textError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Error"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <!-- Display the progress bar -->
    <TextView
        android:id="@+id/Percentages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:text="Percentages"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

<!--    <ProgressBar-->
<!--        android:id="@+id/progressBar"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="66dp"-->
<!--        android:layout_margin="5dp"-->
<!--        android:indeterminateDrawable="@drawable/circular_progress_bar"-->
<!--        android:max="100"-->
<!--        android:padding="10dp"-->
<!--        android:progress="0"-->
<!--        android:progressDrawable="@drawable/circular_progress_bar"-->
<!--        android:progressTint="#EC1010" />
-->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="193dp"
        android:layout_height="170dp"
        android:background="@drawable/circular_shape"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:textAlignment="center" />
    <!--style="?android:attr/progressBarStyleHorizontal"/>-->

    <!-- Display buttons for cancel/resume and delete -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelResume"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Cancel"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnDelete"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Delete"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnQRCode"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="QR code"
            android:textSize="10sp"
            android:visibility="gone" />


        <Button
            android:id="@+id/btnUpdate"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Update"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
